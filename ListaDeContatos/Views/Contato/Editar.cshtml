@model ContatoModel
@{
    ViewData["Title"] = "Editar contatos";
}



<div class="text-center">
    <h1 class="display-4">Edição de contatos</h1>

</div>

<form asp-controller ="Contato" asp-action="Editar" method="post">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome correto do contato">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Digite o email correto do contato">
    </div>
    <div class="mb-3">
        <label for="Celular" class="form-label">Celular</label>
        <input type="text" asp-for="Numero" class="form-control" placeholder="Digite o numero correto do celular">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>